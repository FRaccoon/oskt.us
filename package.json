{
  "name": "oskt.us",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "start": "budo index.js -P -l -d ./public -- -v -d -p [ css-extract -o ./public/index.css ]",
    "build": "browserify -g uglifyify index.js -v -p [ css-extract -o ./public/index.css ] -o ./public/index.js",
    "postbuild": "cssnano --sourcemap ./public/index.css ./public/index.css",
    "clean": "del ./public/index.js ./public/index.css",
    "lint": "stylelint view/**/*.css",
    "test": "echo 'Ya! No test, but all OK!!!'"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-preset-env": "^1.2.1",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.4.7",
    "css-extract": "^1.2.0",
    "cssnano-cli": "^1.0.5",
    "del-cli": "^0.2.1",
    "eslint": "^3.17.1",
    "exorcist": "^0.4.0",
    "postcss-cssnext": "^2.9.0",
    "sheetify": "^6.0.1",
    "sheetify-postcss": "^1.1.0",
    "stylelint": "^7.9.0",
    "stylelint-config-primer": "^1.4.0",
    "stylelint-csstree-validator": "^1.1.1",
    "stylelint-order": "^0.4.1",
    "uglifyify": "^3.0.4"
  },
  "dependencies": {
    "choo": "^4.1.0",
    "normalize.css": "^5.0.0"
  },
  "browserify": {
    "transform": [
      [
        "sheetify/transform",
        {
          "use": [
            [
              "sheetify-postcss",
              {
                "plugins": [
                  [
                    "postcss-cssnext",
                    {
                      "browsers": [
                        "> 1%"
                      ]
                    }
                  ]
                ],
                "map": {
                  "inline": true
                }
              }
            ]
          ]
        }
      ],
      "babelify"
    ]
  }
}
