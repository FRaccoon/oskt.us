{
  "name": "oskt.us",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "start": "budo index.js -P -l -d ./public -- -v -d -p [ css-extract -o ./public/index.css ]",
    "build": "browserify -g uglifyify index.js -v -p [ css-extract -o ./public/index.css ] -o ./public/index.js",
    "clean": "del ./public/index.js ./public/index.css",
    "test": "standard && stylelint view/**/*.css",
    "fmt": "standard --fix"
  },
  "devDependencies": {
    "babel-preset-env": "^1.2.2",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.4.7",
    "css-extract": "^1.2.0",
    "cssnano": "^3.10.0",
    "del-cli": "^0.2.1",
    "exorcist": "^0.4.0",
    "postcss-cssnext": "^2.10.0",
    "sheetify-postcss": "^1.1.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-csstree-validator": "^1.1.1",
    "uglifyify": "^3.0.4",
    "yo-yoify": "^3.7.0"
  },
  "dependencies": {
    "choo": "^4.1.0",
    "normalize.css": "^6.0.0",
    "scopedify": "^1.0.1"
  },
  "browserify": {
    "transform": [
      [
        "scopedify/transform",
        {
          "use": [
            [
              "sheetify-postcss",
              {
                "plugins": [
                  [
                    "postcss-cssnext",
                    {
                      "browsers": [
                        "> 1%"
                      ]
                    }
                  ],
                  [
                    "cssnano",
                    {
                      "autoprefixer": false
                    }
                  ]
                ],
                "map": {
                  "inline": true
                }
              }
            ]
          ]
        }
      ],
      "yo-yoify",
      "babelify"
    ]
  }
}
